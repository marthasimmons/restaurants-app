<!---Gets nav--->
{{>admin_nav}}

<div class="header">
    <h1>Restaurants</h1>
</div>

<section>
    <!---Displays restaurants--->
    {{#each restaurants}}
        <a href="/admin_restaurant/{{this.id}}">  
        <article >
            <main>{{this.name}}</main>
            <img src="{{this.image}}"/>
            <p>{{this.description}}</p>
        </article>
        </a>
    {{/each}}
    <!---Admin version allows user to add restaurants--->
    <a href="/admin_restaurants_add"> 
         <article style="position: relative; height: 405px;">
            <main style="font-size: 180px; position: absolute; top: 50%; left: 50%; padding: 0; transform: translate(-50%,-50%);">+</main>
        </article>
    </a>

</section>